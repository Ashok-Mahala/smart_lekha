# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://production-db-uri/seatflow-sb2

# JWT Configuration
JWT_SECRET=REPLACE_WITH_STRONG_PRODUCTION_SECRET
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=https://seatflow-frontend.example.com

# Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Rate Limiting - more restrictive for production
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=50

# Backup Configuration
BACKUP_DIR=backups
LOG_DIR=logs

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_production_email@example.com
SMTP_PASS=your_production_email_password
SMTP_FROM=noreply@seatflow.com 